<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg" >

    <include layout="@layout/include_layout" />

    <EditText
        android:id="@+id/feedback_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_rl"
        android:layout_margin="@dimen/size_10"
        android:background="@drawable/code_rod"
        android:gravity="top"
        android:hint="@string/opinion_hint"
        android:maxLength="200"
        android:padding="@dimen/size_5" />

    <TextView
        android:id="@+id/feedback_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/feedback_edit"
        android:layout_below="@+id/feedback_edit"
        android:text="@string/edit_num"
        android:textSize="@dimen/size_15sp" />

    <TextView
        android:id="@+id/feedback_submmit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/size_50"
        android:layout_below="@+id/feedback_length"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10"
        android:layout_marginTop="@dimen/size_10"
        android:background="@drawable/btn_ok_selector"
        android:gravity="center"
        android:text="@string/submmit"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_19sp" />

</RelativeLayout>