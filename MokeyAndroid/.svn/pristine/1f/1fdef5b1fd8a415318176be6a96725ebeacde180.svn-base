<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/size_16" >

    <ImageView
        android:id="@+id/news_tj_item_logo"
        android:layout_width="@dimen/size_48"
        android:layout_height="@dimen/size_48"
        android:layout_marginLeft="@dimen/size_16"
        android:src="@drawable/bg_default" />

    <TextView
        android:id="@+id/news_tj_item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/news_tj_item_logo"
        android:layout_alignTop="@+id/news_tj_item_logo"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_toRightOf="@+id/news_tj_item_logo"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:textSize="@dimen/size_16sp" />

    <TextView
        android:id="@+id/news_item_iv"
        android:layout_width="@dimen/size_72"
        android:layout_height="@dimen/size_32"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/size_16"
        android:background="@drawable/btn_ok_selector"
        android:gravity="center"
        android:text="@string/download"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_15sp" />

    <TextView
        android:id="@+id/tv_diver"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_h"
        android:layout_below="@+id/news_tj_item_name"
        android:layout_marginTop="@dimen/size_16"
        android:background="@color/textview_color" />

</RelativeLayout>