<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <ImageView
        android:id="@+id/icon_app"
        android:layout_width="@dimen/size_60"
        android:layout_height="@dimen/size_60"
        android:focusable="false" />

    <TextView
        android:id="@+id/name_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/icon_app"
        android:layout_alignRight="@+id/icon_app"
        android:layout_below="@+id/icon_app"
        android:gravity="center" />

    <TextView
        android:id="@+id/item_app_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/icon_app"
        android:layout_alignLeft="@+id/icon_app"
        android:layout_alignRight="@+id/icon_app"
        android:layout_alignTop="@+id/icon_app"
        android:background="#000000"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/delete_markView"
        android:layout_width="@dimen/size_20"
        android:layout_height="@dimen/size_20"
        android:layout_alignRight="@+id/icon_app"
        android:layout_alignTop="@+id/icon_app"
        android:adjustViewBounds="true"
        android:src="@drawable/delete" />

</RelativeLayout>